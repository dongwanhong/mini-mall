{
  "name": "mini-mall",
  "version": "0.0.1",
  "description": "Small program store project for learning",
  "scripts": {
    "commit": "git-cz",
    "lint:md": "markdownlint **/*.md",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "prettier": "prettier -c --write \"**/*\"",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./lib/commit/cz-conventional-changelog.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "webpack",
    "mini-mall"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:dongwanhong/mini-mall.git"
  },
  "author": "dongwanhong <dongwhchn@163.com>",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "markdownlint": "^0.19.0",
    "markdownlint-cli": "^0.22.0",
    "prettier": "^1.19.1",
    "standard-version": "^8.0.1"
  },
  "license": "MIT"
}
